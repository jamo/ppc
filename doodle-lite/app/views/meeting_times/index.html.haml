- model_class = MeetingTime
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:time)
      %th= model_class.human_attribute_name(:meeting_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @meeting_times.each do |meeting_time|
      %tr
        %td= link_to meeting_time.id, meeting_time_path(meeting_time)
        %td= meeting_time.time
        %td= meeting_time.meeting_id
        %td=l meeting_time.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_meeting_time_path(meeting_time), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), meeting_time_path(meeting_time), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_meeting_time_path, :class => 'btn btn-primary'
