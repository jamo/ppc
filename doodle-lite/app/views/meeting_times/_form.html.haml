= form_for @meeting_time, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :time, :class => 'control-label'
    .controls
      = f.text_field :time, :class => 'text_field'
  .control-group
    = f.label :meeting_id, :class => 'control-label'
    .controls
      = f.text_field :meeting_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), meeting_times_path, :class => 'btn'
