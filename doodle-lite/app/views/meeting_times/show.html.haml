- model_class = MeetingTime
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:time) + ':'
  %br
  = @meeting_time.time
%p
  %strong= model_class.human_attribute_name(:meeting_id) + ':'
  %br
  = @meeting_time.meeting_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), meeting_times_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_meeting_time_path(@meeting_time), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), meeting_time_path(@meeting_time), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
